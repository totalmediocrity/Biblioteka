<Window x:Class="BibliotekaFull.RegistrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotekaFull"
        mc:Ignorable="d"
        Title="Окно регистрации" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите логин:"></Label>
            <TextBox x:Name="LogText" Margin="5"></TextBox>
            <Label Content="Введите пароль:"></Label>
            <PasswordBox x:Name="PassText" Margin="5"></PasswordBox>
       
            <Button x:Name="BackButton" Content="Назад" Margin="5" Background="Beige" Click="BackButton_Click"></Button>
            <Button x:Name="RegistButton" Content="Зарегистрироваться" Margin="5" Click="RegistButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
